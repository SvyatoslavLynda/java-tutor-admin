<h2><%= @article.title %></h2>

<div>
  <%= link_to 'Edit', "/articles/#{@article._id}/edit" %>
  |
  <%= link_to 'Delete', "/articles/#{@article._id}", method: :delete %>
</div>

<pre>
<%= @article.body %>
</pre>

<% if @article.questions %>
    <ul>
      <% @article.questions.each do |question| %>
          <li>
            <%= link_to "Question #{question._id}", "/questions/#{question._id}" %>
            |
            <%= link_to 'Edit', "/questions/#{question._id}/edit" %>
            |
            <%= link_to 'Delete', "/questions/#{question._id}", method: :delete %>
          </li>
      <% end %>
    </ul>
<% end %>

<h2>Add a question:</h2>
<%= form_tag('/questions') do %>

    <%= hidden_field_tag :article_id, @article._id %>

    <p>
      <%= label_tag :body %><br>
      <%= text_area_tag :body, nil, id: 'edit' %>
    </p>

    <div><%= submit_tag 'Save' %></div>
<% end %>