<!DOCTYPE html>
<html>
<head>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= content_for?(:title) ? "#{ApplicationHelper::APPLICATION_NAME} - #{yield(:title)}" : ApplicationHelper::APPLICATION_NAME %></title>
  <%= stylesheet_link_tag 'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>
<header>
  <%= render 'layouts/navigation' %>
</header>
<main role="main">
  <%= render 'layouts/messages' %>
  <%= yield %>
</main>
<script>
  $('#edit').editable({
    inlineMode: false,
    allowedImageTypes: [
      'jpeg',
      'jpg',
      'png'
    ],
    allowedTags: [
      'ul',
      'ol',
      'li',
      'a',
      'img',
      'font',
      'b',
      'strong',
      'em',
      'i',
      'u',
      'p',
      'br',
      'h1',
      'h2',
      'h3',
      'h4',
      'h5',
      'h6'],
    buttons: [
      'bold',
      'italic',
      'underline',
      'insertOrderedList',
      'insertUnorderedList',
      'formatBlock',
      'createLink',
      'insertImage',
      'undo',
      'redo',
      'html'
    ],
    colors: [
      '#61BD6D',
      '#1ABC9C',
      '#54ACD2',
      'REMOVE'
    ],
    formatTags: [
      'ul',
      'ol',
      'li',
      'a',
      'img',
      'font',
      'b',
      'i',
      'u',
      'p',
      'br',
      'h1',
      'h2',
      'h3',
      'h4',
      'h5',
      'h6'
    ],
    blockTags: {
      n: 'Normal',
      h1: 'Heading 1',
      h2: 'Heading 2',
      h3: 'Heading 3',
      h4: 'Heading 4',
      h5: 'Heading 5',
      h6: 'Heading 6'
    },
    useClasses: false,
    imageUpload: false,
    defaultImageAlignment: 'left',
    defaultImageDisplay: 'block',
    allowStyle: false,
    imageTitle: false
  });
</script>
</body>
</html>
